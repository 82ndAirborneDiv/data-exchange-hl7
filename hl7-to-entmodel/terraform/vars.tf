#############################################################################
# VARIABLES
#############################################################################

#############################################################################
# VARIABLES - ENV
#############################################################################

variable "environment_name" {
  type = string
  default = "dev"
}

#############################################################################
# VARIABLES - RG
#############################################################################

variable "resource_group_name" {
  type = string
  default = "TODO_delete_test_rg"
}

variable "location" {
  type    = string
  default = "eastus"
}

#############################################################################
# VARIABLES - VNET
#############################################################################

variable "vnet_cidr_range" {
  type    = string
  default = "10.0.0.0/16"
}

variable "subnet_prefixes" {
  type    = list(string)
  default = ["10.0.0.0/24", "10.0.1.0/24"]
}

#############################################################################
# VARIABLES - STORAGE
#############################################################################

variable "storage_prefix_function" {
  type    = string
  default = "fnstorage"
}


#############################################################################
# TERRAFORM LOCALS
#############################################################################

locals {
  subnet_names = ["pipeline_hl7_${var.environment_name}", "dbx_${var.environment_name}"]
}